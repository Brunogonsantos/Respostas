Resposta 1 em C#:


usando Sistema;

namespace Gupy
{
    programa de aula
    {
        static void Main(string[] args)
        {
            int ÍNDICE, SOMA, K;

            ÍNDICE = 13;
            SOMA = 0;
            K = 0;

            enquanto (K < ÍNDICE)
            {
                K = K + 1;
                SOMA = SOMA + K;
            }


            Console.WriteLine(" O valor da SOMA é " + SOMA);
        }
    }
}


    
